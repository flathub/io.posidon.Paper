{
    "app-id": "io.posidon.Paper",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "io.posidon.Paper",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler/-/archive/v0.8.0/blueprint-compiler-v0.8.0.tar.bz2",
                    "sha256": "6aee981356c32bd0838e6a30cb63070e3ae79d5a5a4776923a89cc9238ae5ca8",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 279929,
                        "url-template": "https://gitlab.gnome.org/jwestman/blueprint-compiler/-/archive/v$version/blueprint-compiler-v$version.tar.bz2"
                    }
                }
            ],
            "cleanup": [
                "*"
            ]
        },
        {
            "name": "Paper",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/posidon_software/paper",
                    "tag": "22.11"
                }
            ]
        }
    ]
}
